{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2015",
		"allowJs": true,
		"outDir": "./dist",
		"strict": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,

		"inlineSources": true,
		"sourceMap": true,
		"sourceRoot": "/",

		"baseUrl": "./src",
		"paths": {
			"~types/*": ["@types/*"],
			"@tests/*": ["../__tests__/*"],
			"@baseApp/*": ["../*"],
			"@admin/*": ["Admin/*"],
			"@controllers/*": ["App/Controllers/*"],
			"@middlewares/*": ["App/Middlewares/*"],
			"@models/*": ["App/Models/*"],
			"@utils/*": ["Utils/*"],
			"@functions/*": ["Functions/*"],
			"@config/*": ["Config/*"],
			"@services/*": ["Services/*"],
			"@jobs/*": ["Jobs/*"],
			"@errors/*": ["Errors/*"]
		},

		"types": ["node", "jest"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
